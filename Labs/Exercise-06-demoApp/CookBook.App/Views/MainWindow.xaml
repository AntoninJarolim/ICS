<Window
    x:Class="CookBook.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CookBook.App.Views"
    xmlns:texts="clr-namespace:CookBook.App.Resources.Texts"
    xmlns:viewModels="clr-namespace:CookBook.App.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    >
    <TabControl>
        <TabItem Header="{x:Static texts:TextResources.TabHeader_Ingredients}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <views:IngredientListView Grid.Column="0" DataContext="{Binding IngredientListViewModel}" />
                <views:IngredientDetailView Grid.Column="1" DataContext="{Binding IngredientDetailViewModel}" />
            </Grid>
        </TabItem>
        <TabItem Header="{x:Static texts:TextResources.TabHeader_Recipes}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <views:RecipeListView Grid.Column="0" DataContext="{Binding RecipeListViewModel}"  />
                <views:RecipeDetailView Grid.Column="1" DataContext="{Binding RecipeDetailViewModel}"  />
                <views:IngredientListView Grid.Column="2" DataContext="{Binding IngredientListViewModel}"  />
                <views:IngredientDetailView Grid.Column="3" DataContext="{Binding IngredientDetailViewModel}"  />
            </Grid>
        </TabItem>
    </TabControl>
</Window>